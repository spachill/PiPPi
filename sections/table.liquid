{% schema %}
  {
    "name": "table",
  "tag": "section",
  "class": "table",
  "settings": [

    {
    "type": "text",
    "id":"title",
    "label":"タイトル",
    "default": "COMPANY"
    },
    {
    "type": "text",
    "id":"subtitle",
    "label":"サブタイトル",
    "default": "会社概要"
    },
    {
    "type": "color",
    "id":"backcolor",
    "label":"背景色"
    },
    {
      "type":"range",
      "id": "pcmt",
      "label": "上の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "pcmb",
      "label": "下の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "spmt",
      "label": "スマホ上の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "spmb",
      "label": "スマホ下の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    }

],
 "blocks": [
    {
      "type": "link",
      "name": "アイテム",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "タイトル"
        },
        {
          "type": "text",
          "id": "text",
          "label": "text"
}
      ]
    }
  ],
"presets":[
  {
    "name":"table"
  }
]
  }
{% endschema %}