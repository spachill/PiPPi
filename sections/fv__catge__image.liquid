{% schema %}
  {
    "name": "画像　横並び",
  "tag": "section",
  "class": "fv__cate__bottom",
  "settings": [
    {
    "type": "color",
    "id":"backcolor",
    "label":"背景色"
    },
    {
      "type":"range",
      "id": "pcmt",
      "label": "上のマージン",
