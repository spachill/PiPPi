        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "pcmb",
        "label": "下の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmt",
        "label": "スマホ上の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmb",
        "label": "スマホ下の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    }
    ],
    "blocks": [
    {
        "type": "block",
        "name": "ブロック",
        "settings": [
        {
            "type":"image_picker",
            "id": "image",
            "label": "アイコン画像"
        },
        {
            "type": "url",
            "id":"url",
            "label": "URL"
        },
        {
            "type": "text",
            "id":"link",
            "label": "ボタンのテキスト"
        }
        ]
    }
    ],
    "presets":[
    {
        "name":"SNSリンク"
    }]}
