{% schema %}
{
    "name": "SNSリンク",
    "tag": "section",
    "class": "custom-cta",
    "settings": [
    {
        "type": "color",
        "id":"backcolor",
        "label":"背景色"
    },
    {
        "type":"range",
        "id": "pcmt",
        "label": "上の余白",
        "default":60,
