{% schema %}
{
  "name": "c-よくある質問",
  "tag": "section",
  "class": "custom__faq",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "項目",
      "default": "項目が入ります",
      "info": "項目が入ります"
    },
    {
      "type": "color",
      "id": "backcolor",
      "label": "背景色"
    },
    {
      "type": "range",
      "id": "pcmt",
      "label": "上のマージン",
      "default": 60,
      "max": 500,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "pcmb",
      "label": "下のマージン",
      "default": 60,
      "max": 500,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "spmt",
      "label": "スマホ上のマージン",
      "default": 60,
      "max": 500,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "spmb",
      "label": "スマホ下のマージン",
      "default": 60,
      "max": 500,
      "min": 0,
      "step": 10,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "カスタム",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "質問"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "回答"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "c-よくある質問"
    }
  ]
}
{% endschema %}
