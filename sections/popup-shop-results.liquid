{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .popup-shop-intro {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.125rem;
    line-height: 1.6;
  }

  .popup-shop-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .popup-shop-item {
    text-align: center;
    background: #fff;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .popup-shop-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .popup-shop-item__image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .popup-shop-item__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #333;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .popup-shop-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .popup-shop-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .popup-shop-item {
      padding: 1rem;
    }

    .popup-shop-item__image {
      height: 150px;
    }

    .popup-shop-intro {
      font-size: 1rem;
      margin-bottom: 1.5rem;
    }
  }
{%- endstyle -%}

<div class="popup-shop-results color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.title }}
        </h2>
      </div>
    {%- endunless -%}

    {%- unless section.settings.intro_text == blank -%}
      <div class="popup-shop-intro">
        {{ section.settings.intro_text }}
      </div>
    {%- endunless -%}

    <div class="popup-shop-grid">
      {%- for block in section.blocks -%}
        <div class="popup-shop-item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
             {{ block.shopify_attributes }}
             {% if settings.animations_reveal_on_scroll %}
               data-cascade
               style="--animation-order: {{ forloop.index }};"
             {% endif %}>
          {%- if block.settings.image != blank -%}
            {{
              block.settings.image
              | image_url: width: 600
              | image_tag:
                class: 'popup-shop-item__image',
                widths: '200, 300, 400, 500, 600',
                sizes: '(min-width: 750px) 33vw, 50vw'
            }}
          {%- else -%}
            <div class="popup-shop-item__image" style="background-color: #f5f5f5; display: flex; align-items: center; justify-content: center; color: #999;">
              画像を追加
            </div>
          {%- endif -%}
          
          {%- if block.settings.title != blank -%}
            <h3 class="popup-shop-item__title">{{ block.settings.title }}</h3>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

