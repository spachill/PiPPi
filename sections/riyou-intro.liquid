    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "カラースキーム",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "余白設定"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "上の余白",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "下の余白",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "ご利用案内"
    }
  ]
}
