      "options": [
        {
          "value": "h2",
          "label": "中"
        },
        {
          "value": "h1",
          "label": "大"
        },
        {
          "value": "h0",
          "label": "特大"
        }
      ],
      "default": "h1",
      "label": "タイトルサイズ"
    },
    {
      "type": "richtext",
