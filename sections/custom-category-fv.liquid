{% schema %}
{
    "name": "カテゴリーページ用FV",
    "tag": "section",
    "class": "custom-category-fv",
    "settings": [
    {
        "type": "image_picker",
        "id":"back_image_pc",
        "label":"PC背景画像"
    },
    {
        "type": "image_picker",
        "id":"back_image_sp",
        "label":"スマホ背景画像"
