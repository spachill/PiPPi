        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmt",
        "label": "スマホ上の余白",
        "default":0,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmb",
        "label": "スマホ下の余白",
        "default":30,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    }
       ],
    "blocks": [
    {
        "type": "block",
        "name": "ブロック",
        "settings": [
        ]
    }
    ],
    "presets":[
    {
        "name":"カテゴリーページ用FV"
    }]}
{% endschema %}