{% comment %} ここから下にHTMLをかく
セクションで囲まれていてクラス名はschemaに記載 {% endcomment %}

<div class="fv__cocnept__inner inner">
  <div class="fv__concept__box-outer">
    {% comment %} <h2 class="fv__concept__title">Concept</h2> {% endcomment %}
    <picture class="fv__concept__image-left">
      <source srcset="{{ section.settings.image-left |  image_url: width:master }}" media="(min-width: 768px)" />
      <img
        src="{{ section.settings.image-leftsp |  image_url: width:master }}"
        alt="{{ image.alt }}"
        loading="lazy"
        width="{{image.width}}"
        height="{{image.height}}" />
    </picture>
    <picture class="fv__concept__image-right">
      <source srcset="{{ section.settings.image-right |  image_url: width: master }}" media="(min-width: 768px)" />
      <img
        src="{{ section.settings.image-rightsp |  image_url: width: master }}"
        alt="{{ image.alt }}"
        loading="lazy"
        width="{{image.width}}"
        height="{{image.height}}" />
    </picture>
    <div class="fv__concept__box-inner">
      <div class="fv__concept__content">
        <p class="fv__concept__text">{{section.settings.text | newline_to_br}}</p>
      </div>


    </div>
    </div>
   <div class="custom__btnbox fv__concept__btnbox">
      <a href="{{section.settings.URL}}" class="custom__buttom fv__concept__link">About Us</a>
    </div> 
</div>


