<style>
  .fv__cocnept__inner {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  .fv__concept__title {
    margin-top: 0;
    margin-bottom: 0;
    font-size: 72px;
    font-family: Noto Sans JP;
    color: #BAAB9B;
    position: absolute;
    top: 0;
    transform: translateY(-50%);
    left: 30px;
    background-color: #fff;
    padding: 0 20px;
  }
  .fv__concept__box-outer {
    max-width: 769px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: -1;
  }
  .fv__concept__box-outer::before {
    top: 7px;
    left: 14px;
    border: 1px solid #BAAB9B;
    position: absolute;
    width: 100%;
    height: 100%;
    display: block;
    content: "";
    z-index: -1;
  }
  .fv__concept__image-left {
    position: absolute;
    transform: translateX(-50%);
    left: 0;
    bottom: 10%;
    background-color: #fff;
    z-index: -1;

  }
  .fv__concept__image-right {
    position: absolute;
    transform: translateX(50%);
    right: 0;
    top: 9%;
    background-color: #fff;

  }
  .fv__concept__box-inner {
    max-width: 769px;
    margin-left: auto;
    margin-right: auto;
  }
  .fv__concept__box-inner::before {
    border: 1px solid #BAAB9B;
    position: absolute;
    width: 100%;
    height: 100%;
