        "unit": "px"
      }, {
        "type": "range",
        "id": "spmt",
        "label": "スマホ上のマージン",
        "default": 60,
        "max": 500,
        "min": 0,
        "step": 10,
        "unit": "px"
      }, {
        "type": "range",
        "id": "spmb",
        "label": "スマホ下のマージン",
        "default": 60,
        "max": 500,
        "min": 0,
        "step": 10,
        "unit": "px"
      },
      {
        "type": "url",
        "id": "URL",
        "label": "URL"
      }

    ],
    "presets": [
      {
        "name": "TOP コンセプト"
      }
    ]
  }
