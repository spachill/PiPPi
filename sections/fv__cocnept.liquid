    .fv__cocnept__inner {
      padding: 0 5%;
    }
    .fv__concept__title {
      margin-top: 0;
      margin-bottom: 0;
      font-size: 48px;
      font-family: Noto Sans JP;
      color: #BAAB9B;
      position: absolute;
      top: 0;
      transform: translateY(-50%);
      left: 30px;
      background-color: #fff;
      padding: 0 20px;
    }
    .fv__concept__box-outer {
      width: 95%;
    }
    .fv__concept__box-outer::before {
      top: 5px;
      left: 7px;
      border: 1px solid #BAAB9B;
      position: absolute;
      width: 100%;
      height: 100%;
      display: block;
      content: "";
      z-index: -3;
    }
    .fv__concept__image-left {
      position: absolute;
      transform: translateX(-17%);
      left: 0;
      bottom: 10%;
      background-color: #fff;
      z-index: -1;

    }
    .fv__concept__image-right {
      position: absolute;
      transform: translateX(35%);
      right: 0;
      top: 9%;
      background-color: #fff;
      z-index: -1;

    }
    .fv__concept__box-inner {}
  .fv__concept__content {
    padding: 50px 50px 20px;
    line-height: 1.8;
  }

  .fv__concept__btnbox {
    margin-bottom: 40px;
  }
}
</style>

{% style %}
  .fv__concept {
    background-color: {{ section.settings.backcolor }};
    padding-top: {{ section.settings.pcmt }}px;
    padding-bottom: {{ section.settings.pcmb }}px;
  }
  @media screen and (max-width: 768px) {
    .fv__concept {
      padding-top: {{ section.settings.spmt }}px;
      padding-bottom: {{ section.settings.spmb }}px;
    }
  }
{% endstyle %}


