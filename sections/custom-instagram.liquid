</script>

{% schema %}
{
"name": "Instagram",
"tag": "section",
"class": "custom-instagram",
"settings": [
{
"type": "color",
"id":"backcolor",
"label":"背景色"
},
{
"type":"range",
"id": "pcmt",
"label": "上の余白",
"default":70,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "pcmb",
"label": "下の余白",
"default":90,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmt",
"label": "スマホ上の余白",
"default":30,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmb",
"label": "スマホ下の余白",
"default":30,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type": "text",
"id": "title",
"label": "見出し"
},
{
"type": "text",
"id": "subtitle",
"label": "サブ見出し"
}
],
"presets":[
{
"name":"Instagram"
}]}
{% endschema %}