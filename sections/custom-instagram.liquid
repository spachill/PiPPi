<div class="custom-instagram__inner">
    {% render 'custom-title'
    , title: section.settings.title
    , subtitle:section.settings.subtitle %}
        <div id="insta-feed"></div>
    
</div>

<style>

    .custom-instagram__inner {
        max-width: 1280px;
        margin: 0 auto;
    }


    .custom-instagram__container {
        margin-top: 40px;
        display: flex;
    }

    .custom-instagram__text {
        font-size: 15px;
        font-weight: 300;
        letter-spacing: 0.08em;
        margin: 0 auto;
        width: 100%;
        max-width: 900px;
        padding: 0 30px;    }

        #insta-feed {
            margin-top: 40px;
        }

        @media screen and (max-width: 768px) {
            .custom-instagram__inner {
                max-width: 600px;
                padding: 0 20px;
            }
        }


</style>

{% style %}

.custom-instagram {
    background-color: {{section.settings.backcolor}};
    padding-top: {{section.settings.pcmt}}px;
    padding-bottom: {{section.settings.pcmb}}px;
}

@media screen and(max-width:768px) {
    .custom-instagram {
        padding-top: {{section.settings.spmt}}px;
        padding-bottom: {{section.settings.spmb}}px;
    }
}

{% endstyle %}


