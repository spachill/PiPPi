<style>
  .page__limited__title {
    font-size: 24px;
    margin-top: 35px;
  }
.page__limited__image {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
}
.page__limited__img  {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: left 50% bottom 30%;
}
.page__limited__inner {
  text-align: center;
  max-width: 800px;
  margin-right: auto;
  margin-left: auto;
}
.page__limited__text  {
    margin-top: 00px;
    margin-bottom: 60px;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 5%;
}
.page__limited__text p {
    text-align: center !important;
}
.page__limited__text p strong{
color: #C49292;
position: relative;
}
.page__limited__text p strong::before{
position: absolute;
top: 0%;
left: 0;
display: block;
content: "";
width: 100%;
height: 70%;
background-color: #F9EFEF;
z-index: -1;
}

.page__limited__content__image {
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}
</style>

{% style %}
.page__limited {
   background-color:{{ section.settings.backcolor }};
  padding-top: {{section.settings.pcmt}}px;
  padding-bottom:{{section.settings.pcmb}}px;
}
  @media screen and (max-width:768px) {
.page__limited {
    padding-top: {{section.settings.spmt}}px;
    padding-bottom:{{section.settings.spmb}} px;
}
}
{% endstyle %}


