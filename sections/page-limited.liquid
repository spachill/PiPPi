{% schema %}
  {
    "name": "限定ページセクション",
  "tag": "section",
  "class": "page__limited",
  "settings": [
    {
    "type": "text",
    "id":"subtitle",
    "label":"サブタイトル",
    "default": "ここにタイトル"
    },
    {
    "type": "image_picker",
    "id":"image",
    "label":"image"
    },
    {
    "type": "image_picker",
    "id":"image2",
    "label":"image2"
    },
    {
    "type": "richtext",
    "id":"text",
    "label":"text"
    },
    {
    "type": "color",
    "id":"backcolor",
    "label":"背景色"
    },
    {
      "type":"range",
      "id": "pcmt",
      "label": "上の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "pcmb",
      "label": "下の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "spmt",
      "label": "スマホ上の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    },
    {
      "type":"range",
      "id": "spmb",
      "label": "スマホ下の余白",
      "default":0,
      "max": 500 ,
      "min": 0,
      "step": 10,
      "unit": "px"
    }

],
 "blocks": [
    {
      "type": "link",
      "name": "カスタム",
      "settings": [
        {
          "type": "text",
          "id": "custom",
          "label": "タイトル"
        }
      ]
    }
  ],
"presets":[
  {
    "name":"限定ページセクション"
  }
]
  }
{% endschema %}