{% comment %} ここから下にHTMLをかく
セクションで囲まれていてクラス名はschemaに記載 {% endcomment %}

<div class="page__limited__image">
  {% if section.settings.image != blank %}
  <img src="{{section.settings.image | image_url: width: 1200 }}" alt="{{ image.alt }}"
  loading="lazy"
  width="{{image.width}}"
   height="{{image.height}}" class="page__limited__img">
  {% endif %}
</div>
<div class="page__inner page__limited__inner">
  {% if section.settings.image2 != blank %}
<img src="{{section.settings.image2 | image_url: width: 1800 }}" alt="{{ image.alt }}"
loading="lazy"
width="{{image.width}}"
 height="{{image.height}}"
 class="page__limited__content__image">
    {% else %}
    <h2 class="page__limited__title common-secondary-subtitle">{{ section.settings.subtitle }}</h2>
    <div class="page__limited__text">{{section.settings.text | newline_to_br}}
    {% endif %}
</div>




