    "settings": [
    {
        "type": "color",
        "id":"backcolor",
        "label":"背景色"
    },
    {
        "type":"range",
        "id": "pcmt",
        "label": "上の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "pcmb",
        "label": "下の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmt",
        "label": "スマホ上の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type":"range",
        "id": "spmb",
        "label": "スマホ下の余白",
        "default":60,
        "max": 500 ,
        "min": 0,
        "step": 10,
        "unit": "px"
    },
    {
        "type": "text",
        "id": "title",
        "label": "タイトル"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "サブタイトル"
      },
      {
          "type": "text",
          "id": "shop_name",
          "label": "店舗名"
        },
        {
            "type": "textarea",
            "id": "message",
            "label": "店舗情報　メッセージ"
          },
          {
            "type": "textarea",
            "id": "number",
            "label": "店舗情報　TEL FAX"
          },
          {
            "type": "textarea",
            "id": "open",
