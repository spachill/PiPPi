    ],
    "blocks": [
    {
        "type": "block",
        "name": "画像",
        "settings": [
        {
            "type":"image_picker",
            "id": "image",
            "label": "画像"
        }
        ]
    }
    ],
    "presets":[
    {
        "name":"店舗情報"
    }]}
