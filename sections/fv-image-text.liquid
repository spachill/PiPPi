},
{
"type": "number",
"id":"font_size_sp",
"label": "タイトル　フォントサイズ（スマホ）",
"default": 24
},


{
"type": "textarea",
"id":"text",
"label": "テキスト"
}
]
}
],
"presets":[
{
"name":"テキスト＋画像"
}
]
}
