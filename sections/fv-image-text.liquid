},
{
"type":"range",
"id": "pcmb",
"label": "下の余白",
"default":100,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmt",
"label": "スマホ上の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmb",
"label": "スマホ下の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
}


],
"blocks": [
{
"type": "text",
"name": "カスタム",
"settings": [
{
"type":"image_picker",
"id": "image",
"label": "画像"
},
{
"type": "textarea",
"id":"title",
"label": "タイトル"
},
{
"type": "number",
"id":"font_size",
"label": "タイトル　フォントサイズ（PC）",
