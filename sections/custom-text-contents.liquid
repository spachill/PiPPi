</script>

{% schema %}
{
"name": "リード文＋本文",
"tag": "section",
"class": "custom-text-contents",
"settings": [
{
"type": "color",
"id":"backcolor",
"label":"背景色"
},
{
"type":"range",
"id": "pcmt",
"label": "上の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "pcmb",
"label": "下の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmt",
"label": "スマホ上の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type":"range",
"id": "spmb",
"label": "スマホ下の余白",
"default":60,
"max": 500 ,
"min": 0,
"step": 10,
"unit": "px"
},
{
"type": "image_picker",
"id":"image",
"label": "リード文横の画像"

},

{
"type": "textarea",
"id":"lead",
"label": "リード文"
},
{
"type": "radio",
"id": "font",
"label": "リード文のフォント",
"options": [
{
"value": "Noto",
"label": "Noto Sans JP"
},
{
"value": "Mincho",
"label": "Shippori Mincho"
}
],
"default": "Noto"
},
{
"type": "checkbox",
"id": "lead-check",
"label": "リード文を中央揃えにする",
"default": true
},
{
"type": "textarea",
"id":"text",
"label": "本文"
},
{
"type": "checkbox",
"id": "check",
"label": "本文を中央揃えにする",
"default": true
}
],

"presets":[
{
"name":"リード文＋本文"
}]}
{% endschema %}