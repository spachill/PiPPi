    {% schema %}
      {
        "name": "会社概要",
      "tag": "section",
      "class": "custom-table",
      "settings": [
        {
        "type": "color",
        "id":"backcolor",
        "label":"背景色"
        },
        {
          "type":"range",
          "id": "pcmt",
          "label": "上のマージン",
          "default":60,
          "max": 500 ,
          "min": 0,
          "step": 10,
          "unit": "px"
        },
        {
          "type":"range",
          "id": "pcmb",
          "label": "下のマージン",
          "default":60,
          "max": 500 ,
          "min": 0,
          "step": 10,
          "unit": "px"
        },
        {
          "type":"range",
          "id": "spmt",
          "label": "スマホ上のマージン",
          "default":60,
          "max": 500 ,
          "min": 0,
          "step": 10,
          "unit": "px"
        },
        {
          "type":"range",
          "id": "spmb",
          "label": "スマホ下のマージン",
          "default":60,
          "max": 500 ,
          "min": 0,
          "step": 10,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "title",
          "label": "タイトル"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "サブタイトル"
        }
    
    ],
    "blocks": [
    {
        "type": "block",
        "name": "ブロック",
        "settings": [
        {
            "type":"text",
            "id": "th",
            "label": "ラベル"
        },
        {
            "type": "textarea",
            "id":"td",
            "label": "情報"
        }
        ]
    }
    ],
    "presets":[
      {
        "name":"会社概要"
      }
    ]
      }
    {% endschema %}